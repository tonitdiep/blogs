<h1 style="text-align:center;">Show Page</h1>

<h2><%= @blog.title %></h2>
<p><%= @blog.content %></p>
<h3>Created by <%=@blog.user.username%></h3>

<% if @current_user.id == @blog.user.id %>
    <a href="/blogs/<%=@blog.id%>/edit">Edit Your Blog</a>
<% end %>



<form method="get" action="/blogs">
  <input type="submit" value="Go Back">
</form>

