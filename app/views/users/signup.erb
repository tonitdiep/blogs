<form action="/signup" method="POST">
  <h1>Signup!</h1>
    Username: <input type="text" name="username">
    Password: <input type="password" name="password" >
  <input type="submit" name="signup">
</form>

<% if !!flash[:message] %>
  <% flash[:message].each do |errors|  %>
    <%= errors %> 
  <% end %>
<% end %>
